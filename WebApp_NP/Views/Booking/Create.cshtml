@model WebApp_NP.Models.ViewModels.BookingVM

<div class="container mt-4">
    <div class="card p-4 shadow-lg">
        <h3 class="text-success">Booking for: @Model.ParkName</h3>

        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="ParkId" />
            <input type="hidden" asp-for="ParkName" />

            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="EmailAddress"></label>
                <input asp-for="EmailAddress" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBooking"></label>
                <input asp-for="DateOfBooking" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="mb-3">
                <label asp-for="NumberOfPersons"></label>
                <input asp-for="NumberOfPersons" class="form-control" type="number" min="1" max="5" required />
            </div>
            <input type="hidden" asp-for="Price" />

            <div class="text-end">
                <button type="submit" class="btn btn-success">Book Now</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.querySelector('[name="NumberOfPersons"]').addEventListener("input", function () {
        let persons = parseInt(this.value) || 0;
        document.querySelector('[name="Price"]').value = persons * 100;
    });
</script>
